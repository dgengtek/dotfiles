snippet stems "asciimath stem single line"
stem:[${1}] $0
endsnippet


snippet ref "asciidoc anchor reference"
<<${1:${VISUAL}}#${2:Header Anchor},${3:Name of reference}>> $0
endsnippet


snippet link "asciidoc link macro"
link:${1:${VISUAL}}[${2:Google reference}] $0
endsnippet


snippet linkimage "asciidoc link image"
image::${1:sunset.jpg}[${2:Sunset}] $0
endsnippet


snippet linkvideo "asciidoc link video"
video::${1:video_file.mp4}[${2:Description}] $0
endsnippet


snippet blockopen "asciidoc open block" b
--
$0
An open block can be an anonymous container,
or it can masquerade as any other block.
--
endsnippet


snippet blocksource "asciidoc open block" b
[source]
--
$0
puts "I'm a source block!"
--
endsnippet


snippet blockpass "asciidoc passthrough block" b
++++
$0
<p>
Content in a passthrough block is passed to the output unprocessed.
That means you can include raw HTML, like this embedded Gist:
</p>

<script src="https://gist.github.com/mojavelinux/5333524.js">
</script>
++++
endsnippet


snippet blockpassthroughstem "asciidoc passthrough stem block" b
[stem]
++++
${1:a * a * \dots * a = a^n}
$0
++++
endsnippet


