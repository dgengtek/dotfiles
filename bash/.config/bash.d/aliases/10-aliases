################################################################################
# io 
# ------------------------------------------------------------------------------
alias echoerr=">&2 echo"

################################################################################
# etc
# ------------------------------------------------------------------------------
alias transde="trans en:de"
alias transen="trans de:en"
alias transru="trans de:ru"
alias youtube-dl_best="youtube-dl -f ('bestvideo[width>=1920]'/bestvideo)+bestaudio/best"
alias p=$PAGER

################################################################################
# script alias
# ------------------------------------------------------------------------------
alias tmuxn=tmux_new_session.sh
tmuxncd() { local path=$1;shift; tmux_new_session.sh -p "$path" "$@"; }
alias r=run.sh
alias rq="run.sh -q -n --"
alias rterm="run.sh -q -n -- alacritty"
alias rshell=rterm
alias runshell=runterm
