#!/usr/bin/env bash
################################################################################
# apps
# ------------------------------------------------------------------------------
alias browser="firefox"
alias sage_gui="sage -c 'notebook(automatic_login=True)'"
alias alarm="run.sh -n -q -- mplayer $BEEP"
alias pdfviewer="zathura"
alias pdfannotator="xournalpp"
alias mindmap="freeplane"
alias mind="freeplane"
alias webcamrecorder="guvcview"
alias webcammirror="vlc v4l2:// :input-slave=alsa:// :v4l-vdev='/dev/video0'"

################################################################################
# web
# ------------------------------------------------------------------------------
alias wget_offline_view="wget --recursive --timestamping --no-clobber --page-requisites --adjust-extension --convert-links --no-parent"


################################################################################
# office
# ------------------------------------------------------------------------------
alias vimwiki="vim -c VimwikiIndex"
alias vimwiki_select="vim -c VimwikiUISelect"
#alias journal_note="vim -c VimwikiMakeDiaryNote"
#alias journal_select="vim -c VimwikiUISelect -c VimwikiDiaryIndex -c VimwikiDiaryGenerateLinks"
