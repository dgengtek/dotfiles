[commit]
  template = ~/.config/git/gitmessage
[core]
  editor = vim
  whitespace = trailing-space,space-before-tab
  askpass = 
  excludesFile = ~/.config/git/ignore
[merge]
  tool = delta
  conflictstyle = diff3
  stat = true
[push]
  default = simple
[pull]
  rebase = True
[merge "ours"]
  driver = true
[color]
  ui = auto
[alias]
  s = status
  d = diff
  dc = diff --cached
  l = pull
  p = push
  co = checkout
  r = remote
  cm = checkout master
  b = branch
  a = add
  m = merge
  st = stash

[branch]
  autosetupmerge = true

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
